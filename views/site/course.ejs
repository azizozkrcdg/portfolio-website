<!-- views/blogs.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>Blog - Aziz Özkaracadağ</title>

  <!-- Favicons -->
  <link href="/site/img/favicon.png" rel="icon">
  <link href="/site/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="/site/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Your custom CSS -->
  <link href="/site/css/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="./site/css/style.css" rel="stylesheet">

  <!-- BOOTSTRAP CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

  <!-- ======= Header ======= -->
  <header id="header" class="d-flex flex-column justify-content-center">

    <nav id="navbar" class="navbar nav-menu">
      <ul>
        <li><a href="/" class="nav-link scrollto"><i class="bi bi-house"></i> <span>Home</span></a></li>
        <li><a href="http://localhost:7000/blogs" class="nav-link scrollto"><i class="bi bi-chat-square-quote"></i> <span>Blogs</span></a></li>
        <li><a href="http://localhost:7000/course" class="nav-link scrollto"><i class="bi bi-youtube"></i> <span>Videos</span></a></li>
      </ul>
    </nav><!-- .nav-menu -->

  </header><!-- End Header -->

  <div class="row">

    <!-- Content Column -->
    <div class="col-lg-12 mb-4">

      <div class="container py-4">
        <h1 class="text-center">Eğitim Videoları</h1>

        <div class="row g-4 mt-10">
          <% videos.forEach(function(video) { %>
            <div class="col-md-4 mt-5">
              <div class="card video-card shadow-sm h-100">
                <iframe src="https://www.youtube.com/embed/<%= video.youtube_id %>" title="<%= video.title %>"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <%= video.title %>
                  </h5>
                  <p class="card-text flex-grow-1">
                    <%= video.description || 'Açıklama yok' %>
                  </p>
                  <!-- silme butonu -->
                  <form action="/admin/course/<%= video.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="bi btn btn-sm btn-outline-danger ">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>


    </div>
  </div>




  <script src="/site/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


  <!-- ======= Footer ======= -->
  <footer id="footer" class="mt-auto">
    <div class="container">
      <h3>Aziz Özkaracadağ</h3>
      <div class="copyright">
        &copy; Created by <strong><span><a href="/">AzzSec</a></span></strong>
      </div>
    </div>
  </footer>
</body>


</body>

</html>