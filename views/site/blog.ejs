<!-- views/blogs.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Blog - Aziz Özkaracadağ</title>
  
    <!-- Favicons -->
    <link href="/site/img/favicon.png" rel="icon">
    <link href="/site/img/apple-touch-icon.png" rel="apple-touch-icon">
  
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  
    <!-- Bootstrap CSS -->
    <link href="/site/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  
    <!-- Your custom CSS -->
    <link href="/site/css/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
  <link href="./site/css/style.css" rel="stylesheet">

  <!-- BOOTSTRAP CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  </head>

<body class="d-flex flex-column min-vh-100">

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex flex-column justify-content-center">

      <nav id="navbar" class="navbar nav-menu">
        <ul>
          <li><a href="/" class="nav-link scrollto active"><i class="bi bi-house"></i> <span>Home</span></a></li>
         
        </ul>
      </nav><!-- .nav-menu -->
  
    </header><!-- End Header -->


  <div class="container mt-5">
    <h1 class="mb-4 text-center">All Blogs</h1>
    
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <% if (blog.summary) { %>
                <p class="card-text text-muted">
                  <%= blog.summary.length > 100 ? blog.summary.substring(0, 100) + "..." : blog.summary %>
                </p>
              <% } else { %>
                <p class="card-text text-muted">
                  <%= blog.content.length > 100 ? blog.content.substring(0, 100) + "..." : blog.content %>
                </p>
              <% } %>

              <div class="mt-auto">
                <a href="/blogs/<%= blog._id %>" class="btn btn-success btn-block mt-3">Read More</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="/site/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- ======= Footer ======= -->
    <footer id="footer" class="mt-auto">
      <div class="container">
        <h3>Aziz Özkaracadağ</h3>
        <div class="copyright">
          &copy; Created by <strong><span><a href="/">AzzSec</a></span></strong>
        </div>
      </div>
    </footer>
  </body>
  

</body>
</html>
