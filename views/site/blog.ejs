<!-- views/blogs.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Blog - Aziz Özkaracadağ</title>
  
    <!-- Favicons -->
    <link href="/site/img/favicon.png" rel="icon">
    <link href="/site/img/apple-touch-icon.png" rel="apple-touch-icon">
  
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  
    <!-- Bootstrap CSS -->
    <link href="/site/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  
    <!-- Your custom CSS -->
    <link href="/site/css/style.css" rel="stylesheet">
  </head>

<body>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/" style="margin: 0px 20px;">Aziz Özkaracadağ</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container mt-5">
    <h1 class="mb-4 text-center">All Blogs</h1>
    
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <% if (blog.summary) { %>
                <p class="card-text text-muted">
                  <%= blog.summary.length > 100 ? blog.summary.substring(0, 100) + "..." : blog.summary %>
                </p>
              <% } else { %>
                <p class="card-text text-muted">
                  <%= blog.content.length > 100 ? blog.content.substring(0, 100) + "..." : blog.content %>
                </p>
              <% } %>

              <div class="mt-auto">
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary btn-block mt-3">Read More</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="/site/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


</body>
</html>
