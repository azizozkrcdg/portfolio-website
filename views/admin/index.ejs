<%- include("partials/_header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("partials/sidebar.ejs") %>


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

              <%- include("partials/_navbar.ejs") %>



                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>

                    

                    <!-- Content Row -->
                                        

                        <div class="container mt-5">
                        <div class="row text-center">

                            <!-- Toplam Proje -->
                            <div class="col-md-4 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                    <h6 class="text-primary fw-bold">Toplam Proje</h6>
                                    <h3><%= projects.length %></h3>
                                    <div class="progress mt-2" style="height: 5px;">
                                        <div class="progress-bar bg-primary"></div>
                                    </div>
                                    </div>
                                    <div class="text-primary fs-1">
                                    <i class="bi bi-kanban-fill"></i>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>

                            <!-- Toplam Sertifika -->
                            <div class="col-md-4 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                    <h6 class="text-success fw-bold">Toplam Sertifika</h6>
                                    <h3><%= certificates.length %></h3>
                                    <div class="progress mt-2" style="height: 5px;">
                                        <div class="progress-bar bg-success"></div>
                                    </div>
                                    </div>
                                    <div class="text-success fs-1">
                                    <i class="bi bi-award-fill"></i>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>

                            <!-- Toplam Blog -->
                            <div class="col-md-4 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                    <h6 class="text-warning fw-bold">Toplam Blog</h6>
                                    <h3><%= blogs.length %></h3>
                                    <div class="progress mt-2" style="height: 5px;">
                                        <div class="progress-bar bg-warning"></div>
                                    </div>
                                    </div>
                                    <div class="text-warning fs-1">
                                    <i class="bi bi-journal-richtext"></i>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>

                            <!-- Toplam Admin -->
                            <div class="col-md-4 mb-4">
                                <div class="card shadow h-100">
                                    <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                        <h6 class="text-warning fw-bold">Toplam Admin</h6>
                                        <h3><%= admins.length %></h3>
                                        <div class="progress mt-2" style="height: 5px;">
                                            <div class="progress-bar bg-warning"></div>
                                        </div>
                                        </div>
                                        <div class="text-warning fs-1">
                                        <i class="bi bi-journal-richtext"></i>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                                </div>

                        </div>
                        </div>   
                </div>
                </div>
                <!-- /.container-fluid -->
                <%- include("partials/_footer.ejs") %> 

            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

   <%- include("partials/_script.ejs") %>



</body>

</html>