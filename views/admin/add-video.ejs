<%- include("partials/_header.ejs") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- CKEditor 5 Classic Build (CDN) -->
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

    <body class="bg-light" id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include("partials/sidebar.ejs") %>


                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include("partials/_navbar.ejs") %>



                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Content Row -->
                                <div class="row">

                                    <title>Yeni Video Ekle</title>



                                    <div class="container mt-5">
                                        <div class="card shadow-lg">
                                            <div class="card-header">
                                                <h3 class="mb-0">Yeni Eğitim Videosu Ekle</h3>
                                            </div>
                                            <div class="card-body">

                                                <form action="/admin/course/add" method="POST">
                                                    <div class="mb-3">
                                                        <label for="title" class="form-label">Video Başlığı</label>
                                                        <input type="text" name="title" id="title" class="form-control"
                                                            placeholder="Örn: Node.js Giriş Eğitimi" required>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="youtube_id" class="form-label">YouTube Video
                                                            ID</label>
                                                        <input type="text" name="youtube_id" id="youtube_id"
                                                            class="form-control" placeholder="Örn: dQw4w9WgXcQ"
                                                            required>
                                                        <div class="form-text">
                                                            YouTube linki şu şekildeyse:
                                                            <code>https://www.youtube.com/watch?v=dQw4w9WgXcQ</code>, ID
                                                            kısmı <strong>dQw4w9WgXcQ</strong> olur.
                                                        </div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="description" class="form-label">Açıklama</label>
                                                        <textarea name="description" id="description"
                                                            class="form-control" rows="4"
                                                            placeholder="Bu videoda Node.js temellerini öğreneceksiniz..."></textarea>
                                                    </div>

                                                    <div class="d-flex justify-content-between">
                                                        <a href="/admin/course" class="btn btn-secondary">Geri Dön</a>
                                                        <button type="submit" class="btn btn-success">Videoyu
                                                            Ekle</button>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                    </div>


                    <%- include("partials/_footer.ejs") %>

                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <%- include("partials/_script.ejs") %>



    </body>

    </html>