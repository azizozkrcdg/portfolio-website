<%- include("partials/_header.ejs") %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- CKEditor 5 Classic Build (CDN) -->
  <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

      <%- include("partials/sidebar.ejs") %>


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <%- include("partials/_navbar.ejs") %>



              <!-- Begin Page Content -->
              <div class="container-fluid">
                <div class="text-end">
                  <a href="/admin/course/add" class="btn btn-success btn-lg">Video Ekle</a>
                </div>
                <!-- Content Row -->
                <div class="row">

                  <!-- Content Column -->
                  <div class="col-lg-12 mb-4">

  <div class="container py-4">
    <h1 class="mb-4 text-center">Eğitim Videoları</h1>

    <div class="row g-4">
      <% videos.forEach(function(video) { %>
        <div class="col-md-4">
          <div class="card video-card shadow-sm h-100">
            <iframe src="https://www.youtube.com/embed/<%= video.youtube_id %>" 
              title="<%= video.title %>" frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen></iframe>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= video.title %></h5>
              <p class="card-text flex-grow-1"><%= video.description || 'Açıklama yok' %></p>
              <!-- İstersen altına buton da ekleyebilirsin -->
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


                  </div>
                </div>
              </div>
          </div>


          <%- include("partials/_footer.ejs") %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <%- include("partials/_script.ejs") %>



  </body>

  </html>